<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bmaroney_notes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/activity_main_title" >
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:parentActivityName=".MainActivity" 
            	  android:name="com.example.bmaroney_notes.newTodo" 
            	  android:label="@string/activity_newTodo" 
            	  android:theme="@style/AppTheme">                              
        </activity>
        <activity android:parentActivityName=".MainActivity" 
            	  android:name="com.example.bmaroney_notes.ArchiveActivity" 
            	  android:label="@string/action_archiveMode" 
            	  android:theme="@style/AppTheme">                              
        </activity>
    </application>

</manifest>
